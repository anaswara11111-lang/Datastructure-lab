#include <stdio.h>

int main() {
    int n, i = 1, sum = 0;
    float average;

    printf("Enter the value of n: ");
    scanf("%d", &n);

    do {
        sum += i;
        i++;
    } while (i <= n);

    average = (float)sum / n;

    printf("Sum = %d\n", sum);
    printf("Average = %.2f\n", average);

    return 0;
}
